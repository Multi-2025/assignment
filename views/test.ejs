<!DOCTYPE html>
<html>
<head>
  <title>Socket.IO Test</title>
  <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
</head>
<body>
  <h1>Socket.IO Test</h1>
  <button id="sendTestEvent">Send Test Event</button>

  <script>
    var socket = io();

    socket.on('connect', function() {
      console.log('Connected to server');
    });

    socket.on('testResponse', function(data) {
      console.log('Received testResponse:', data);
    });

    socket.on('updateQuestion', function(newQuestionIndex) {
      console.log('Update question to index:', newQuestionIndex);
    });

    socket.on('disconnect', function() {
      console.log('Disconnected from server');
    });

    document.getElementById('sendTestEvent').addEventListener('click', function() {
      socket.emit('testEvent', { message: 'Hello from client' });
    });
  </script>
</body>
</html>
